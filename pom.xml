	<scm>
		<connection>scm:git:git@github.com/coodoo-io/workhorse.git</connection>
		<url>scm:git:git@github.com:coodoo-io/workhorse.git</url>
		<developerConnection>scm:git:git@github.com:coodoo-io/workhorse.git</developerConnection>
		<tag>HEAD</tag>
	</scm>
	<issueManagement>
		<system>Github</system>
		<url>https://github.com/coodoo-io/workhorse/issues</url>
	</issueManagement>

</project>